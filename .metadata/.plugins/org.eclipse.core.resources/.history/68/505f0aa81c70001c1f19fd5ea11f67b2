

public class exercicio6 {

	public static void main(String...strings){

        objetoGeometrico1();

        System.out.println();

        objetoGeometrico2();

        System.out.println();

        objetoGeometrico3();

    }



    public static void objetoGeometrico1(){



        for(int y=1;y<=row;y++){

            for(int x=1;x<=y;x++)

                System.out.print("*");

            System.out.println();

        }

    }



    public static void objetoGeometrico2(){

        for(int y=1;y<=row;y++){

            for(int space=row;space>y;space--)

                System.out.print(" ");

            for(int x=1;x<=y;x++)

                System.out.print("*");

            System.out.println();

        }

    }



    public static void objetoGeometrico3(){



        for(int y=1, star=1;y<=row;y++,star +=2){

            for(int space=row;space>y;space--)

                System.out.print(" ");

            for(int x=1;x<=star;x++)

                System.out.print("*");

            System.out.println();

        }

    }

		}

		
		}
	
